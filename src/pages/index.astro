---
import Layout from '../layouts/Layout.astro';
import NearbyStories from "../components/NearbyStories";
import { getCollection } from 'astro:content';

// Haal alle verhalen op uit de content folder
const verhalen = await getCollection("verhalen");
const stories = verhalen.map((v) => ({
  title: v.data.title,
  slug: v.slug,
  coordinates: v.data.coordinates
}));
---

<Layout>
	<NearbyStories stories={stories} />
</Layout>
